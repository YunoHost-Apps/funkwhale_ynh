{
	"name": "Funkwhale",
	"id": "funkwhale",
	"packaging_format": 1,
	"requirements": {
		"yunohost": ">= 3.0.0~beta1.2"
	},
	"description": {
		"en": "A modern, convivial and free music server"
	},
	"version": "0.14.0~ynh1",
	"url": "https://funkwhale.audio",
	"license": "BSD-3-Clause",
	"maintainer": {
		"name": "Jean-Baptiste Holcroft",
		"email": "jean-baptiste@holcroft.fr"
	},
	"multi_instance": true,
	"services": [
		"nginx"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain"
				},
				"example": "domain.fr"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
				    "en": "Choose a path (for now, only / works)",
				    "fr": "Choisir un chemin pour (pour l'instant, seul / fonctionne)"	
				},
				"example": "/",
				"default": "/"
			},
			{
				"name": "is_public",
				"type": "boolean",
				"ask": {
					"en": "Should Funkwhale be publicly accessible?",
					"en": "Funkwhale doit-il Ãªtre publiquement accessible ?"					
				},
				"default": "0"
			},
			{
				"name": "admin",
				"type": "user",
				"ask": {
					"en": "Choose an admin user for Funkwhale?",
					"fr": "Choisir l'utilisateur YunoHost administrateur pour FunkWhale"					
				},
				"example": "jibec"
			}
		]
	}
}
