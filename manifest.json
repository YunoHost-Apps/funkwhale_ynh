{
	"name": "Funkwhale",
	"id": "funkwhale",
	"packaging_format": 1,
	"requirements": {
		"yunohost": ">= 3.0.0"
	},
	"description": {
		"en": "A modern, convivial and free music server"
	},
	"version": "0.14.2~ynh2",
	"url": "https://funkwhale.audio",
	"license": "BSD-3-Clause",
	"maintainer": {
		"name": "Jean-Baptiste Holcroft",
		"email": "jean-baptiste@holcroft.fr"
	},
	"multi_instance": true,
	"services": [
		"nginx"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain"
				},
				"example": "domain.fr"
			},
			{
				"name": "is_public",
				"type": "boolean",
				"ask": {
					"en": "Should Funkwhale be publicly accessible?"
				},
				"default": "0"
			},
			{
				"name": "admin",
				"type": "user",
				"ask": {
					"en": "Choose an admin user for Funkwhale?"
				},
				"example": "jibec"
			}
		]
	}
}
